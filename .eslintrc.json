{
	"root": true,
	"env": {
		"node": true
	},
	"extends": "airbnb-base",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".mjs", ".js"]
			}
		}
	},
	"rules": {
		"import/extensions": [
			"error",
			"always",
			{
				"mjs": "never",
				"js": "never"
			}
		],
		"class-methods-use-this": 0,
		"comma-dangle": 0,
		"no-tabs": 0,
		"indent": [
			"error",
			"tab"
		]
	},
	"overrides": [{
		"files": ["packages/*/test/**/*.mjs"],
		"env": {
			"jest": true
		}
	}]
}
